@page
@model RazorCurrencyConverter.Pages.IndexModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="css/styles.css" />
</head>
<body>

    <div class="container px-4 text-center row gy-5 mainContainer">
        <h2>Конвертер валют</h2>
        <!-- форма для ввода данных -->
        <form class="row gy-3 mainForm" action="/" method="get">
            <!-- поле ввода n -->
            <div class="currencyDiv">
                <input type="number" id="currencyFrom" name="sum" min="1" required value="@Model.Sum" />
                <select name="from_" class="form-select" aria-label="валюта">
                    @if(Model.Result!=0 && Model.Result!=null){
                        <option selected>@Model.CurentFrom</option>
                    }
                    else{
                        <option selected>у меня есть</option>
                    }
                    @foreach(string val in Model.Valutes){
                        <option value="@val">@val</option>
                    }
                </select>
            </div>
            <div class="currencyDiv">
                <input type="text" value="@Model.Result" readonly />
                <select name="to_" class="form-select" aria-label="валюта">
                    @if (Model.Result != 0 && Model.Result!=null)
                    {
                        <option selected>@Model.CurentTo</option>
                    }
                   else{
                        <option selected>перевести в</option>
                   }
                    @foreach (string val in Model.Valutes)
                    {
                        <option value="@val">@val</option>
                    }
                </select>
            </div>
            
            <!-- кнопка отправки формы -->
            <button class="btn btn-primary">Конвертировать</button>
        </form>

        <span>@Model.MessageError</span>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>